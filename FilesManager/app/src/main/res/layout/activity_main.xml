<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ecrireFichierInterne"
        android:id="@+id/btnEcrireInterne"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:onClick="btnEcrireFichierInterneOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="creerDossierExternePublic"
        android:id="@+id/btnCreerDossierExternePublic"
        android:onClick="btnCreerDossierExternePublicOnClick"
        android:layout_below="@+id/btnEcrireInterne"
        android:layout_alignLeft="@+id/btnEcrireInterne"
        android:layout_alignStart="@+id/btnEcrireInterne" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ecrireFichierExternePrivate"
        android:id="@+id/btnEcrireFichierexternePrivate"
        android:onClick="btnEcrireFichierExternePrivateOnClick"
        android:layout_below="@+id/btnCreerDossierExternePublic"
        android:layout_alignLeft="@+id/btnCreerDossierExternePublic"
        android:layout_alignStart="@+id/btnCreerDossierExternePublic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ecrireFichierExternePublic"
        android:id="@+id/btnEcrireFichierExternePublic"
        android:onClick="btnEcrireFichierExternePublicOnClick"
        android:layout_below="@+id/btnEcrireFichierexternePrivate"
        android:layout_alignLeft="@+id/btnEcrireFichierexternePrivate"
        android:layout_alignStart="@+id/btnEcrireFichierexternePrivate" />

</RelativeLayout>
