<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.application.ericjoly.interfacevisuel.HeureActivityFragment"
    android:background="@drawable/metalbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00"
        android:id="@+id/tv"
        android:textSize="150dp"
        android:textColor="#51BC3B"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="192dp" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="125dp"
        android:id="@+id/imageView"
        android:src="@drawable/metalname"
        android:scaleType="fitXY"
        android:layout_marginRight="94dp"
        android:layout_marginEnd="94dp"
        android:layout_alignTop="@+id/tv"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrez la limite:"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginRight="161dp"
        android:autoText="false"
        android:focusableInTouchMode="false"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="138dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/edtTreshold"
        android:textColor="#EB1A1A"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/tv"
        android:layout_toEndOf="@+id/tv" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:textSize="40dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajuster"
        android:id="@+id/btnTreshold"
        android:layout_below="@+id/edtTreshold"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:singleLine="true" />

</RelativeLayout>