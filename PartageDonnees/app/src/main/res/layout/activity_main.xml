<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnSendIntent"
        android:id="@+id/btnSendIntent"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:onClick="onClickbtnSendIntent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnSendIntentChooser"
        android:id="@+id/btnSendIntentChooser"
        android:layout_below="@+id/btnSendIntent"
        android:layout_centerHorizontal="true"
        android:onClick="onClickbtnSendIntentChooser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnSendMultiplePieces"
        android:id="@+id/btnSendMultiplePieces"
        android:layout_below="@+id/btnSendIntentChooser"
        android:layout_centerHorizontal="true"
        android:onClick="onClickbtnSendMultiplePieces" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShareText"
        android:id="@+id/btnShareText"
        android:layout_below="@+id/btnSendMultiplePieces"
        android:layout_centerHorizontal="true"
        android:onClick="shareTextOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnShareImage"
        android:id="@+id/btnShareImage"
        android:onClick="shareImageOnClick"
        android:layout_below="@+id/btnShareText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
